{
  "name": "arhone/framework",
  "description": "Стартовый набор для разработка приложений на PHP 7",
  "homepage": "https://github.com/arhone/framework",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Алексей Арх",
      "email": "info@arh.one"
    }
  ],
  "minimum-stability": "dev",
  "config": {
    "vendor-dir": "library/composer"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/arhone/builder"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/http"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/trigger"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/config"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/cache"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/controller"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/registry"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/template"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/session"
    },
    {
      "type": "git",
      "url": "https://github.com/arhone/storage"
    }
  ],
  "require-dev": {
    "php": "^7.0",
    "arhone/builder": "dev-master",
    "arhone/http": "dev-master",
    "arhone/trigger": "dev-master",
    "arhone/config": "dev-master",
    "arhone/cache": "dev-master",
    "arhone/controller": "dev-master",
    "arhone/registry": "dev-master",
    "arhone/template": "dev-master",
    "arhone/session": "dev-master",
    "arhone/storage": "dev-master"
  },
  "require": {
    "php": "^7.0",
    "arhone/builder": "^1.0",
    "arhone/http": "^1.0",
    "arhone/trigger": "^1.0",
    "arhone/config": "^1.0",
    "arhone/cache": "^1.0",
    "arhone/controller": "^1.0",
    "arhone/registry": "^1.0",
    "arhone/template": "^1.0",
    "arhone/session": "^1.0",
    "arhone/storage": "^1.0"
  },
  "scripts": {
    "arhone-install": [
      "./arhone"
    ],
    "post-create-project-cmd": [
      "@arhone-install"
    ]
  }
}